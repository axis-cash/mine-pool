<div class="jumbotron">
  <div class="container">
    <p class="lead">矿池算力: {{format-hashrate model.hashrate}}.</p>
    <strong>在线矿工:</strong> <span class="label label-info">{{model.minersTotal}}</span>
  </div>
</div>
<div class="container">
  {{#if model.miners}}
  <h4>矿工列表</h4>
  <div class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>矿工钱包地址</th>
          <th>算力</th>
          <th>最近一次提交</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.miners as |m|}}
        <tr class="{{if m.offline "warning"}}">
          <td style="width: 750px;word-wrap:break-word;word-break:break-all;">{{#link-to 'account' m.login class='hash'}}{{m.login}}{{/link-to}}</td>
          <td>{{format-hashrate m.hr}}</td>
          <td>{{format-date-locale m.lastBeat}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3>无矿工</h3>
  {{/if}}
</div>
